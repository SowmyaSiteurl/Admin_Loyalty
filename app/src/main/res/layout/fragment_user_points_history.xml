<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="siteurl.in.admin_loyalty.Fragments.UserPointsHistory">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/product_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <SearchView
            android:queryHint="Search here"
            android:layout_alignParentRight="true"
            android:id="@+id/UserRedeemSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </SearchView>

        <EditText
            android:visibility="gone"
            android:id="@+id/UserRedeemFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="search here">

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tophead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/UserRedeemSearch">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:id="@+id/textView9" />


            <TextView
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Status" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:text="BuyerID"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:layout_centerHorizontal="true"
                android:text="Points Earned"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="39dp"
                android:layout_marginRight="39dp"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                android:text="Amount"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:background="@color/whitetext"
                android:id="@+id/view" />

        </RelativeLayout>


        <ListView
            android:id="@+id/UserRedeemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/UserRedeemSearch">

        </ListView>

    </RelativeLayout>

</RelativeLayout>
